<?xml version = "1.0" encoding = "utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    android:background="#ECDCDF"
    tools:context = ".MainActivity">

    <TextView
        android:id = "@+id/PlayerOne"
        android:layout_height = "wrap_content"
        android:layout_width = "wrap_content"
        android:text = "Player One"
        android:layout_marginTop = "35dp"
        android:layout_marginLeft = "20dp"
        android:textSize = "25dp"
        android:textColor="#624763"
        android:textStyle = "bold"
        app:layout_constraintTop_toTopOf = "parent"
        app:layout_constraintLeft_toLeftOf = "parent"
        />

    <TextView
        android:id = "@+id/ScoreOne"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:text = "0"
        android:textSize = "30sp"
        android:textColor="#624763"
        android:textStyle = "bold"
        app:layout_constraintTop_toBottomOf = "@+id/PlayerOne"
        app:layout_constraintLeft_toLeftOf = "@+id/PlayerOne"
        android:layout_marginLeft = "40dp"
        />

    <TextView
        android:id = "@+id/PlayerTwo"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:text = "Player Two"
        android:textSize = "25sp"
        android:textColor="#624763"
        android:textStyle="bold"
        android:layout_marginRight = "20dp"
        app:layout_constraintRight_toRightOf = "parent"
        app:layout_constraintTop_toTopOf = "@+id/PlayerOne"
        />

    <TextView
        android:id = "@+id/ScoreTwo"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:text = "0"
        android:textSize="30sp"
        android:textColor="#624763"
        android:textStyle = "bold"
        android:layout_marginRight = "40dp"
        app:layout_constraintTop_toBottomOf = "@+id/PlayerTwo"
        app:layout_constraintRight_toRightOf = "@+id/PlayerTwo"
        />

    <TextView
        android:id="@+id/Time"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="35dp"
        android:text="00:00:00"
        android:textStyle="bold"
        android:textColor="#624763"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/ScoreOne"
        android:textAlignment="center"
        />

    <Button
        android:id = "@+id/Button_0"
        android:layout_width = "100dp"
        android:layout_height = "100dp"
        android:textSize = "60dp"
        android:textStyle = "bold"
        android:textAlignment="center"
        android:backgroundTint="#624763"
        android:textColor="#F9B3D1"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/ScoreOne"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Button
        android:id = "@+id/Button_1"
        android:layout_width = "100dp"
        android:layout_height = "100dp"
        android:textSize = "60dp"
        android:textStyle = "bold"
        android:textAlignment="center"
        android:backgroundTint="#624763"
        android:textColor="#F9B3D1"
        app:layout_constraintTop_toTopOf="@+id/Button_0"
        app:layout_constraintLeft_toRightOf="@+id/Button_0"
        app:layout_constraintRight_toLeftOf="@id/Button_2"
        />

    <Button
        android:id = "@+id/Button_2"
        android:layout_width = "100dp"
        android:layout_height = "100dp"
        android:textSize = "60dp"
        android:textStyle = "bold"
        android:textAlignment="center"
        android:backgroundTint="#624763"
        android:textColor="#F9B3D1"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="@+id/Button_0"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id = "@+id/Button_3"
        android:layout_width = "100dp"
        android:layout_height = "100dp"
        android:textSize = "60dp"
        android:textStyle = "bold"
        android:textAlignment="center"
        android:backgroundTint="#624763"
        android:textColor="#F9B3D1"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/Button_0"
        app:layout_constraintLeft_toLeftOf="@+id/Button_0"
        />

    <Button
        android:id = "@+id/Button_4"
        android:layout_width = "100dp"
        android:layout_height = "100dp"
        android:textSize = "60dp"
        android:textStyle = "bold"
        android:textAlignment="center"
        android:backgroundTint="#624763"
        android:textColor="#F9B3D1"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/Button_1"
        app:layout_constraintRight_toRightOf="@id/Button_1"
        />

    <Button
        android:id = "@+id/Button_5"
        android:layout_width = "100dp"
        android:layout_height = "100dp"
        android:textSize = "60dp"
        android:textStyle = "bold"
        android:textAlignment="center"
        android:backgroundTint="#624763"
        android:textColor="#F9B3D1"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/Button_0"
        app:layout_constraintRight_toRightOf="@id/Button_2"
        />

    <Button
        android:id = "@+id/Button_6"
        android:layout_width = "100dp"
        android:layout_height = "100dp"
        android:textSize = "60dp"
        android:textStyle = "bold"
        android:textAlignment="center"
        android:backgroundTint="#624763"
        android:textColor="#F9B3D1"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf = "@+id/Button_3"
        app:layout_constraintLeft_toLeftOf = "@+id/Button_0"
        />

    <Button
        android:id = "@+id/Button_7"
        android:layout_width = "100dp"
        android:layout_height = "100dp"
        android:textSize = "60dp"
        android:textStyle = "bold"
        android:textAlignment="center"
        android:backgroundTint="#624763"
        android:textColor="#F9B3D1"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/Button_4"
        app:layout_constraintRight_toRightOf="@+id/Button_4"
        />

    <Button
        android:id = "@+id/Button_8"
        android:layout_width = "100dp"
        android:layout_height = "100dp"
        android:textSize = "60dp"
        android:textStyle = "bold"
        android:textAlignment="center"
        android:backgroundTint="#624763"
        android:textColor="#F9B3D1"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/Button_4"
        app:layout_constraintRight_toRightOf="@+id/Button_5"
        />

    <Button
        android:id="@+id/Reset"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:text="Reset Game!"
        android:textSize="27dp"
        android:textStyle="bold"
        android:textColor="#F9B3D1"
        android:textAlignment="center"
        android:backgroundTint="#624763"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toBottomOf="@id/Button_8"
        />
    

</androidx.constraintlayout.widget.ConstraintLayout>
